{
  "name": "trace-pretty",
  "version": "1.0.0",
  "description": "A tool to make JavaScript/TypeScript stack traces readable, elegant, and actionable",
  "main": "dist/index.js",
  "bin": {
    "trace-pretty": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prepare": "npm run clean && npm run build",
    "prepublishOnly": "npm run prepare",
    "publish:npm": "npm publish --access public"
  },
  "keywords": [
    "stack-trace",
    "error-handling",
    "debugging",
    "typescript",
    "node",
    "cli"
  ],
  "author": "Alexandre Lababsa",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/a-lababsa/trace-pretty.git"
  },
  "homepage": "https://github.com/a-lababsa/trace-pretty#readme",
  "bugs": {
    "url": "https://github.com/a-lababsa/trace-pretty/issues"
  },
  "files": [
    "dist/**/*",
    "CLI_USAGE.md",
    "README.md"
  ],
  "dependencies": {
    "source-map": "^0.7.4",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
